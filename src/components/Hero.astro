---
import OptimizedImage from './OptimizedImage.astro';
import { BUSINESS } from '../data/constants';

// Clear headlines focused on helping small businesses transform their operations
const headline = "Transform Your Business Operations";
const subheadline = "Complete back-office solutions for growing businesses in the trades and service industries.";
const description = "From bookkeeping to payroll, branding to business consultingâ€”we handle the details so you can focus on what you do best.";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black">
  <!-- Premium Background with Mesh Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-black via-gray-950 to-black"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 opacity-30">
    <!-- Floating geometric shapes -->
    <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-gradient-to-r from-gold/20 to-goldLight/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/3 right-1/4 w-96 h-96 bg-gradient-to-l from-gold/10 to-goldLight/5 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[40rem] h-[40rem] bg-gradient-to-r from-gold/5 to-transparent rounded-full blur-3xl animate-pulse"></div>
  </div>

  <!-- Grid Pattern Overlay -->
  <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 1px 1px, rgba(212,175,55,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>

  <div class="relative z-10 container mx-auto px-6 py-20">
    <div class="max-w-6xl mx-auto">
      <!-- Professional Badge -->
      <div class="text-center mb-8 animate-fade-in">
        <div class="inline-flex items-center gap-3 glass-card px-6 py-3 mb-8">
          <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gold/90 tracking-wide">TRUSTED BUSINESS PARTNERS</span>
          <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
        </div>
      </div>

      <!-- Main Headline -->
      <div class="text-center mb-12 animate-fade-in" style="animation-delay: 0.2s;">
        <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold leading-none mb-8 text-white">
          {headline}
        </h1>
        
        <h2 class="text-xl md:text-2xl lg:text-3xl font-medium text-gold mb-6 max-w-4xl mx-auto leading-relaxed">
          {subheadline}
        </h2>
        
        <p class="text-lg md:text-xl text-gray-200 max-w-3xl mx-auto leading-relaxed">
          {description}
        </p>
      </div>

      <!-- Premium CTA Section -->
      <div class="text-center mb-16 animate-fade-in" style="animation-delay: 0.4s;">
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
          <a href="/services" class="btn-primary group">
            <span>Explore Our Services</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
          
          <a href="/contact" class="btn-secondary group">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>Get Free Consultation</span>
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center items-center gap-8 text-sm text-white/60">
          <div class="flex items-center gap-2">
            <div class="flex -space-x-2">
              <div class="w-8 h-8 rounded-full bg-gradient-to-r from-gold to-goldLight flex items-center justify-center text-xs font-bold text-black">ðŸ’¼</div>
              <div class="w-8 h-8 rounded-full bg-gradient-to-r from-goldLight to-gold flex items-center justify-center text-xs font-bold text-black">ðŸ§ </div>
              <div class="w-8 h-8 rounded-full bg-gradient-to-r from-gold to-goldDark flex items-center justify-center text-xs font-bold text-black">âš¡</div>
            </div>
            <span class="font-medium">Psychology-Driven Methods</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Proven Accountability Systems</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <span>Next-Gen Workforce Ready</span>
          </div>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16 animate-fade-in" style="animation-delay: 0.6s;">
        <div class="card-premium text-center">
          <div class="text-4xl font-bold text-gradient-gold mb-2">500+</div>
          <div class="text-lg font-medium text-white mb-1">Businesses Served</div>
          <div class="text-sm text-white/60">Across all industries</div>
        </div>
        
        <div class="card-premium text-center">
          <div class="text-4xl font-bold text-gradient-gold mb-2">98%</div>
          <div class="text-lg font-medium text-white mb-1">Client Satisfaction</div>
          <div class="text-sm text-white/60">Professional service excellence</div>
        </div>
        
        <div class="card-premium text-center">
          <div class="text-4xl font-bold text-gradient-gold mb-2">10+</div>
          <div class="text-lg font-medium text-white mb-1">Years Experience</div>
          <div class="text-sm text-white/60">Proven business solutions</div>
        </div>
      </div>

      <!-- Philosophy Quote -->
      <div class="text-center animate-fade-in" style="animation-delay: 0.8s;">
        <div class="glass-card max-w-4xl mx-auto p-8">
          <blockquote class="text-2xl md:text-3xl font-medium text-white/90 italic leading-relaxed mb-4">
            "Every business deserves professional-grade operations and support. With the right systems in place, any company can scale efficiently while maintaining quality and profitability."
          </blockquote>
          <cite class="text-gold font-medium">â€” Karson Lawrence, Founder & CEO</cite>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/40 animate-bounce">
    <div class="flex flex-col items-center gap-2">
      <span class="text-xs font-medium tracking-wide">DISCOVER MORE</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>
