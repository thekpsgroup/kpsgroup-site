---
// Testimonials component for social proof and conversion optimization
export interface Testimonial {
  name: string;
  company: string;
  role: string;
  content: string;
  avatar?: string;
  rating: number;
  results?: string;
}

const testimonials: Testimonial[] = [
  {
    name: "Sarah Johnson",
    company: "Johnson HVAC Solutions", 
    role: "Owner",
    content: "The KPS Group transformed our entire operation. Our QuickBooks was a mess, payroll took hours each week, and we had no visibility into profitability. Now everything runs smoothly and we've increased profits by 40%.",
    rating: 5,
    results: "40% profit increase"
  },
  {
    name: "Mike Rodriguez",
    company: "Rodriguez Electrical",
    role: "CEO", 
    content: "Before KPS Group, I was drowning in paperwork and couldn't focus on growing the business. Their Modern Suite gave us enterprise-level systems that actually work for contractors. Best investment we've made.",
    rating: 5,
    results: "3x revenue growth"
  },
  {
    name: "Jennifer Chen",
    company: "Chen Marketing Agency",
    role: "Founder",
    content: "The consultation alone was worth thousands. They identified inefficiencies I didn't even know existed and provided a clear roadmap to scale. The ROI was immediate.",
    rating: 5,
    results: "6-month ROI"
  },
  {
    name: "David Thompson", 
    company: "Thompson Construction",
    role: "Operations Manager",
    content: "Their job costing setup in QuickBooks finally gave us accurate project profitability. We went from guessing to knowing exactly which jobs make money. Game changer.",
    rating: 5,
    results: "25% margin improvement"
  },
  {
    name: "Lisa Martinez",
    company: "Martinez Consulting",
    role: "Principal",
    content: "Professional, knowledgeable, and they deliver results fast. The payroll transition was seamless and their ongoing support is outstanding. Highly recommend.",
    rating: 5,
    results: "80% time savings"
  },
  {
    name: "Robert Kim",
    company: "Kim Technologies",
    role: "CTO",
    content: "The Modern Suite integration connected all our business systems perfectly. Everything talks to each other now. We can finally see the big picture and make data-driven decisions.",
    rating: 5,
    results: "Complete visibility"
  }
];

export interface Props {
  showAll?: boolean;
  limit?: number;
  title?: string;
  subtitle?: string;
}

const {
  showAll = false,
  limit = 3,
  title = "What Our Clients Say",
  subtitle = "Real results from real businesses like yours"
} = Astro.props;

const displayTestimonials = showAll ? testimonials : testimonials.slice(0, limit);
---

<section class="py-16 lg:py-24 bg-gradient-to-b from-black to-gray-950">
  <div class="max-w-7xl mx-auto px-6">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-3 bg-warning-400/10 backdrop-blur-sm border border-warning-400/30 rounded-full px-6 py-3 mb-8">
        <div class="w-2 h-2 bg-warning-400 rounded-full animate-pulse"></div>
        <span class="text-sm font-medium text-warning-400 tracking-wide uppercase">Client Success Stories</span>
        <div class="w-2 h-2 bg-warning-400 rounded-full animate-pulse"></div>
      </div>
      
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">{title}</h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto">{subtitle}</p>
      
      <!-- Trust Stats -->
      <div class="flex justify-center items-center gap-8 mt-8 text-sm text-gray-400">
        <div class="flex items-center gap-2">
          <div class="flex text-warning-400">
            {"★".repeat(5)}
          </div>
          <span>98% Satisfaction</span>
        </div>
        <span class="hidden sm:inline">•</span>
        <div>300+ Happy Clients</div>
        <span class="hidden sm:inline">•</span>
        <div>10+ Years Experience</div>
      </div>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {displayTestimonials.map((testimonial, index) => (
        <div 
          class="bg-gradient-to-br from-gray-900/90 to-gray-800/90 border border-gray-700/50 rounded-2xl p-6 lg:p-8 backdrop-blur-sm hover:border-warning-400/30 transition-all duration-300 hover:transform hover:scale-105"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Rating -->
          <div class="flex items-center gap-3 mb-4">
            <div class="flex text-warning-400 text-lg">
              {"★".repeat(testimonial.rating)}
            </div>
            {testimonial.results && (
              <div class="bg-green-500/10 border border-green-500/30 rounded-full px-3 py-1">
                <span class="text-xs font-medium text-green-400">{testimonial.results}</span>
              </div>
            )}
          </div>

          <!-- Quote -->
          <blockquote class="text-gray-300 mb-6 leading-relaxed">
            "{testimonial.content}"
          </blockquote>

          <!-- Author -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-gradient-to-br from-warning-400 to-warning-300 rounded-full flex items-center justify-center">
              <span class="text-black font-bold text-lg">
                {testimonial.name.split(' ').map(n => n[0]).join('')}
              </span>
            </div>
            <div>
              <div class="font-semibold text-white">{testimonial.name}</div>
              <div class="text-sm text-gray-400">{testimonial.role}, {testimonial.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-warning-400/10 to-warning-300/10 rounded-2xl p-8 border border-warning-400/20">
        <h3 class="text-2xl font-bold text-white mb-4">Ready to Join Our Success Stories?</h3>
        <p class="text-gray-300 mb-6">Get your free consultation and discover how we can transform your business like we did for these clients.</p>
        
        <a 
          href="/contact"
          class="inline-flex items-center gap-2 bg-warning-400 hover:bg-warning-300 text-black font-bold py-4 px-8 rounded-lg transition-all duration-300 hover:scale-105"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          Get My FREE Consultation
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animate testimonials on scroll */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .testimonial-card {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Hover effects */
  .testimonial-card:hover {
    box-shadow: 0 25px 50px -12px rgba(248, 214, 115, 0.15);
  }
</style>

<script>
  // Intersection Observer for scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const testimonialCards = document.querySelectorAll('.testimonial-card');
    
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      });

      testimonialCards.forEach((card) => {
        observer.observe(card);
      });
    } else {
      // Fallback for browsers without IntersectionObserver
      testimonialCards.forEach((card) => {
        card.style.opacity = '1';
      });
    }
  });
</script>
