<style>
  .nav-link {
    @apply relative px-3 py-2 text-sm font-medium text-accent-400/90 hover:text-accent-300 transition-all duration-300;
  }
  
  .nav-indicator {
    @apply absolute bottom-0 left-1/2 w-0 h-0.5 bg-gradient-to-r from-accent-500 to-accent-400 transition-all duration-300 transform -translate-x-1/2;
  }
  
  .nav-link:hover .nav-indicator {
    @apply w-full;
  }
  
  .dropdown-link {
    @apply flex items-center gap-3 px-4 py-3 text-sm font-medium text-accent-400/90 hover:text-accent-300 hover:bg-accent-500/10 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-accent-500;
  }
  
  .mobile-nav-link {
    @apply block px-4 py-3 text-base font-medium text-accent-400/90 hover:text-accent-300 hover:bg-accent-500/10 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-accent-500;
  }
  
  .btn-primary {
    @apply relative inline-flex items-center justify-center px-6 py-2.5 bg-gradient-to-r from-accent-600 to-accent-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2 focus:ring-offset-black overflow-hidden;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%) skewX(-12deg);
    }
    100% {
      transform: translateX(200%) skewX(-12deg);
    }
  }

  .animate-shimmer {
    animation: shimmer 1.5s ease-in-out;
  }

  /* Enhanced mobile touch targets */
  @media (max-width: 768px) {
    .mobile-nav-link {
      @apply min-h-12 flex items-center;
    }
    
    .btn-primary {
      @apply min-h-12;
    }
  }

  /* Better focus visibility */
  .nav-link:focus-visible,
  .mobile-nav-link:focus-visible,
  .btn-primary:focus-visible {
    @apply ring-2 ring-accent-400 ring-offset-2 ring-offset-black outline-none;
  }

  /* Improved logo hover effect */
  .group:hover .group-hover\:scale-105 {
    transform: scale(1.05);
  }
</style>
