---
import { BUSINESS } from '../data/constants';

// Professional messaging for holding company positioning
const headline = "The Modern Suite";
const subheadline = "Empowering Small Business Success Through Integrated Solutions";
const description = "The KPS Group brings together six specialized companies under one unified platform, giving small business owners everything they need to scale efficiently and profitably.";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black">
  <!-- Hero Background Image -->
  <div class="absolute inset-0">
    <img 
      src="/logos/the-modern-suite.png" 
      alt="The KPS Group - The Modern Suite"
      class="w-full h-full object-contain object-center opacity-90"
      loading="eager"
    />
    <!-- Professional overlay for text readability -->
    <div class="absolute inset-0 bg-black/80"></div>
  </div>
  
  <!-- Subtle geometric elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-to-r from-gold/15 to-goldLight/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-to-l from-gold/10 to-goldLight/10 rounded-full blur-3xl animate-pulse" style="animation-delay: -3s;"></div>
  </div>

  <div class="relative z-10 container mx-auto px-6 py-20">
    <div class="max-w-6xl mx-auto">
      
      <!-- Company Badge -->
      <div class="text-center mb-12 animate-fade-in">
        <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-gold/30 rounded-full px-8 py-4 mb-8">
          <div class="w-3 h-3 bg-gold rounded-full animate-pulse"></div>
          <span class="text-gold font-semibold tracking-wider text-sm uppercase">Professional Holding Company</span>
          <div class="w-3 h-3 bg-gold rounded-full animate-pulse"></div>
        </div>
      </div>

      <!-- Main Headlines -->
      <div class="text-center mb-16 animate-fade-in" style="animation-delay: 0.2s;">
        <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-white mb-8 leading-tight">
          {headline}
        </h1>
        
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-medium text-gold mb-8 max-w-5xl mx-auto leading-relaxed">
          {subheadline}
        </h2>
        
        <p class="text-xl md:text-2xl text-white/90 max-w-4xl mx-auto leading-relaxed font-light">
          {description}
        </p>
      </div>

      <!-- Professional CTAs -->
      <div class="text-center mb-20 animate-fade-in" style="animation-delay: 0.4s;">
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12">
          <a href="/services" class="group inline-flex items-center gap-3 bg-gold hover:bg-goldLight text-black font-semibold px-8 py-4 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-gold/25">
            <span class="text-lg">Explore The Modern Suite</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
          
          <a href="/contact" class="group inline-flex items-center gap-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold px-8 py-4 rounded-lg border border-white/20 hover:border-gold/50 transition-all duration-300 hover:scale-105">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <span class="text-lg">Schedule Consultation</span>
          </a>
        </div>
      </div>

      <!-- Company Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20 animate-fade-in" style="animation-delay: 0.6s;">
        <div class="text-center bg-white/5 backdrop-blur-sm border border-gold/20 rounded-xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-5xl font-bold text-gradient-gold mb-3">6</div>
          <div class="text-xl font-semibold text-white mb-2">Specialized Companies</div>
          <div class="text-white/70">Integrated solutions for every business need</div>
        </div>
        
        <div class="text-center bg-white/5 backdrop-blur-sm border border-gold/20 rounded-xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-5xl font-bold text-gradient-gold mb-3">1000+</div>
          <div class="text-xl font-semibold text-white mb-2">Businesses Empowered</div>
          <div class="text-white/70">Small businesses scaled successfully</div>
        </div>
        
        <div class="text-center bg-white/5 backdrop-blur-sm border border-gold/20 rounded-xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-5xl font-bold text-gradient-gold mb-3">99%</div>
          <div class="text-xl font-semibold text-white mb-2">Client Satisfaction</div>
          <div class="text-white/70">Proven results and lasting partnerships</div>
        </div>
      </div>

      <!-- Mission Statement -->
      <div class="text-center animate-fade-in" style="animation-delay: 0.8s;">
        <div class="bg-white/5 backdrop-blur-sm border border-gold/20 rounded-2xl max-w-5xl mx-auto p-12">
          <blockquote class="text-2xl md:text-3xl lg:text-4xl font-light text-white leading-relaxed mb-8 italic">
            "Small businesses are the backbone of our economy. They deserve enterprise-level solutions without enterprise-level complexity. The Modern Suite makes that possible."
          </blockquote>
          <cite class="text-gold font-semibold text-xl">â€” Karson Lawrence, Founder & CEO</cite>
        </div>
      </div>
    </div>
  </div>

  <!-- Clean scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/60 animate-bounce">
    <div class="flex flex-col items-center gap-2">
      <span class="text-xs font-medium tracking-wider uppercase">Discover Our Companies</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>

<style>
.text-gradient-gold {
  background: linear-gradient(135deg, #f8d673 0%, #fce7b3 50%, #f8d673 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 1s ease-out forwards;
}
</style>
