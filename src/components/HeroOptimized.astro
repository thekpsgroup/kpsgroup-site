    box-shadow: 0 10px 25px rgba(248, 214, 115, 0.3);
    transform: translateY(-2px);
  }

  /* Pulse animation for urgency */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
