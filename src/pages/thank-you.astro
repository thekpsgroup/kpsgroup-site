---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Thank You | The KPS Group';
const description = "Your message has been received. We'll follow up shortly to discuss your business needs.";
---

<BaseLayout {title} {description}>
  <section class="py-20 sm:py-32 px-6 flex items-center justify-center min-h-screen bg-black">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-gold/10 via-transparent to-goldLight/10"></div>
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-gold/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-goldLight/5 rounded-full blur-3xl"></div>
    
    <div class="relative z-10 text-center max-w-2xl mx-auto">
      <!-- Success badge -->
      <div class="inline-flex items-center gap-3 bg-gradient-to-r from-green-500/20 to-gold/20 border border-green-500/30 rounded-full px-6 py-3 mb-8 backdrop-blur-sm animate-fade-in">
        <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
        <span class="text-sm font-medium text-green-400">Message Delivered Successfully</span>
      </div>

      <!-- Main content -->
      <div class="bg-gradient-to-br from-gray-900/90 to-gray-800/90 border border-goldDark/30 rounded-3xl p-8 sm:p-12 backdrop-blur-sm animate-slide-in-up">
        <!-- Success icon -->
        <div class="w-20 h-20 bg-gradient-to-br from-gold to-goldLight rounded-full flex items-center justify-center mx-auto mb-8 animate-bounce">
          <svg class="w-10 h-10 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>

        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-goldLight mb-6 leading-tight animate-fade-in">
          Thank You! ✅
        </h1>
        
        <p class="text-lg sm:text-xl text-gray-300 mb-8 leading-relaxed animate-fade-in">
          Your message has been submitted. Our team will get back to you within 1 business day to discuss how The Modern Suite can help your business.
        </p>

        <!-- Action buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/"
            class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-gold to-goldLight text-black font-semibold px-6 py-3 rounded-lg hover:from-goldLight hover:to-gold transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-gold/25"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Return Home
          </a>
          
          <a 
            href="/services"
            class="inline-flex items-center justify-center gap-2 bg-transparent text-goldLight border border-gold/30 font-semibold px-6 py-3 rounded-lg hover:bg-gold/10 hover:border-gold transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            Explore Services
          </a>
        </div>

        <!-- Contact info -->
        <div class="mt-8 pt-6 border-t border-gray-700/50">
          <p class="text-sm text-gray-400 mb-2">
            Need immediate assistance?
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-sm">
            <a 
              href="mailto:sales@thekpsgroup.com" 
              class="text-gold hover:text-goldLight transition-colors duration-300 flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              sales@thekpsgroup.com
            </a>
            <span class="hidden sm:block text-gray-600">•</span>
            <a 
              href="tel:4695343392" 
              class="text-gold hover:text-goldLight transition-colors duration-300 flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              (469) 534-3392
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
