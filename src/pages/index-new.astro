---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';

// SEO-optimized metadata for The KPS Group holding company
const title = 'The KPS Group | The Modern Suite - Empowering Small Business Success';
const description = 'The KPS Group brings together six specialized companies under The Modern Suite, providing small businesses with integrated solutions for operations, technology, finance, branding, consulting, and HR. Professional holding company serving businesses nationwide.';
const keywords = [
  'holding company',
  'small business solutions',
  'integrated business services',
  'modern suite',
  'business consulting',
  'technology solutions',
  'financial services',
  'branding services',
  'HR services',
  'operations consulting',
  'business empowerment',
  'professional services',
  'small business support',
  'enterprise solutions',
  'business integration'
];

const seoProps = {
  location: 'Austin, Texas with nationwide reach',
  service: 'integrated business solutions through The Modern Suite',
  canonical: 'https://thekpsgroup.com/',
};
---

<BaseLayout {title} {description} {keywords} {...seoProps}>
  <Hero />
  
  <!-- The Modern Suite Overview -->
  <section class="relative py-24 lg:py-32 bg-gradient-to-b from-black to-gray-950" role="region" aria-labelledby="modern-suite-heading">
    <div class="container mx-auto px-6">
      
      <!-- Section Header -->
      <div class="text-center mb-20 animate-fade-in">
        <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-warning-400/30 rounded-full px-6 py-3 mb-8">
          <div class="w-2 h-2 bg-warning-400 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-warning-400 tracking-wide uppercase">The Modern Suite</span>
          <div class="w-2 h-2 bg-warning-400 rounded-full animate-pulse"></div>
        </div>

        <h2 id="modern-suite-heading" class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight">
          Six Companies,<br/><span class="text-gradient-gold">One Unified Vision</span>
        </h2>
        
        <p class="text-xl md:text-2xl text-white/80 max-w-4xl mx-auto leading-relaxed">
          The KPS Group has carefully assembled six specialized companies to provide small businesses with everything they need to compete at an enterprise level.
        </p>
      </div>

      <!-- Modern Suite Companies Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
        
        <!-- Modern OS -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 group">
          <div class="flex items-center justify-center mb-6">
            <picture>
              <source srcset="/logos/modern-os.webp" type="image/webp">
              <img src="/logos/modern-os.png" alt="Modern OS" class="h-16 w-auto" width="64" height="64" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-warning-400 transition-colors">
            Modern OS
          </h3>
          <p class="text-white/70 leading-relaxed mb-6">
            Complete operational systems and process optimization. We build the infrastructure that lets your business run like clockwork.
          </p>
          <ul class="space-y-2 text-sm text-white/60">
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Standard Operating Procedures
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Process Automation
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Quality Management Systems
            </li>
          </ul>
        </div>

        <!-- Modern Stack -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 group">
          <div class="flex items-center justify-center mb-6">
            <picture>
              <source srcset="/logos/modern-stack.webp" type="image/webp">
              <img src="/logos/modern-stack.png" alt="Modern Stack" class="h-16 w-auto" width="64" height="64" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-warning-400 transition-colors">
            Modern Stack
          </h3>
          <p class="text-white/70 leading-relaxed mb-6">
            Cutting-edge technology solutions that scale with your business. From websites to custom software, we build what you need.
          </p>
          <ul class="space-y-2 text-sm text-white/60">
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Custom Web Applications
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Business Technology Integration
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Digital Transformation
            </li>
          </ul>
        </div>

        <!-- Modern Consulting -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 group">
          <div class="flex items-center justify-center mb-6">
            <picture>
              <source srcset="/logos/modern-consulting.webp" type="image/webp">
              <img src="/logos/modern-consulting.png" alt="Modern Consulting" class="h-16 w-auto" width="64" height="64" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-warning-400 transition-colors">
            Modern Consulting
          </h3>
          <p class="text-white/70 leading-relaxed mb-6">
            Strategic guidance from experienced professionals who understand what it takes to scale a business successfully.
          </p>
          <ul class="space-y-2 text-sm text-white/60">
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Business Strategy & Planning
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Growth & Scaling Solutions
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Performance Optimization
            </li>
          </ul>
        </div>

        <!-- Modern Brands -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 group">
          <div class="flex items-center justify-center mb-6">
            <picture>
              <source srcset="/logos/modern-brands.webp" type="image/webp">
              <img src="/logos/modern-brands.png" alt="Modern Brands" class="h-16 w-auto" width="64" height="64" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-warning-400 transition-colors">
            Modern Brands
          </h3>
          <p class="text-white/70 leading-relaxed mb-6">
            Professional branding and marketing that positions your business as the premium choice in your market.
          </p>
          <ul class="space-y-2 text-sm text-white/60">
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Brand Strategy & Design
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Website Development
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Digital Marketing
            </li>
          </ul>
        </div>

        <!-- Modern Ledger -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 group">
          <div class="flex items-center justify-center mb-6">
            <picture>
              <source srcset="/logos/modern-ledger.webp" type="image/webp">
              <img src="/logos/modern-ledger.png" alt="Modern Ledger" class="h-16 w-auto" width="64" height="64" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-warning-400 transition-colors">
            Modern Ledger
          </h3>
          <p class="text-white/70 leading-relaxed mb-6">
            Professional financial management that gives you clear visibility into your business performance and profitability.
          </p>
          <ul class="space-y-2 text-sm text-white/60">
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Bookkeeping & Accounting
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Financial Analysis & Reporting
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              CFO-Level Advisory
            </li>
          </ul>
        </div>

        <!-- Modern Pay -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 group">
          <div class="flex items-center justify-center mb-6">
            <img src="/logos/modern-pay.png" alt="Modern Pay" class="h-16 w-auto" />
          </div>
          <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-warning-400 transition-colors">
            Modern Pay
          </h3>
          <p class="text-white/70 leading-relaxed mb-6">
            Complete HR and payroll solutions that ensure compliance while supporting your team's growth and success.
          </p>
          <ul class="space-y-2 text-sm text-white/60">
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              PEO & Payroll Services
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              Benefits Administration
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1 h-1 bg-gold rounded-full"></div>
              HR Compliance & Support
            </li>
          </ul>
        </div>

      </div>

      <!-- Integration Message -->
      <div class="text-center">
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl max-w-4xl mx-auto p-12">
          <h3 class="text-3xl font-bold text-white mb-6">Seamlessly Integrated</h3>
          <p class="text-xl text-white/80 leading-relaxed mb-8">
            While each company specializes in their domain, they all work together as one unified system. Your operational data flows seamlessly between financial reporting, your technology stack supports your brand strategy, and your HR systems align with your business goals.
          </p>
          <a href="/services" class="inline-flex items-center gap-3 bg-gold hover:bg-warning-300 text-black font-semibold px-8 py-4 rounded-lg transition-all duration-300 hover:scale-105">
            <span>Explore The Modern Suite</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>

    </div>
  </section>

  <!-- Why The KPS Group Section -->
  <section class="relative py-24 lg:py-32 bg-gradient-to-b from-gray-950 to-black">
    <div class="container mx-auto px-6">
      
      <!-- Section Header -->
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-8">
          Why Small Businesses Choose<br/><span class="text-gradient-gold">The KPS Group</span>
        </h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">
          We understand the unique challenges of growing a business because we've been there. Our approach combines enterprise-level expertise with small business agility.
        </p>
      </div>

      <!-- Benefits Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Enterprise Capabilities</h3>
          <p class="text-white/70">
            Access to sophisticated systems and processes typically available only to large corporations, tailored for small business needs.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Proven Results</h3>
          <p class="text-white/70">
            Over 250+ businesses have successfully scaled using The Modern Suite, with 99% client retention and measurable growth outcomes.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Dedicated Partnership</h3>
          <p class="text-white/70">
            You're not just a client - you're a partner. We invest in your success and grow alongside your business for long-term mutual benefit.
          </p>
        </div>

      </div>

      <!-- CTA Section -->
      <div class="text-center">
        <h3 class="text-3xl font-bold text-white mb-6">Ready to Transform Your Business?</h3>
        <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
          Schedule a free consultation to discover how The Modern Suite can empower your business to compete at the next level.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center gap-3 bg-gold hover:bg-warning-300 text-black font-semibold px-8 py-4 rounded-lg transition-all duration-300 hover:scale-105">
            <span>Schedule Free Consultation</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </a>
          <a href="/services" class="inline-flex items-center gap-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold px-8 py-4 rounded-lg border border-white/20 hover:border-warning-400/50 transition-all duration-300">
            <span>Learn More</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>

    </div>
  </section>

</BaseLayout>

<style>
.text-gradient-gold {
  background: linear-gradient(135deg, #f8d673 0%, #fce7b3 50%, #f8d673 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 1s ease-out forwards;
}
</style>
