  /* Ensure no floating scroll indicators appear */
  div[class*="bottom-8"]:has(svg[viewBox="0 0 24 24"]) {
    display: none !important;
  }
  
  /* Hide any absolute positioned scroll indicators */
  .absolute.bottom-8.left-1\/2 {
    display: none !important;
  }
  
  /* Enhanced mobile responsiveness and performance */
  @media (max-width: 768px) {
    .absolute[class*="animate-bounce"] {
      display: none !important;
    }
    
    /* Fix any centering issues with scroll indicators */
    div[class*="transform"][class*="-translate-x-1/2"] {
      left: 50% !important;
      transform: translateX(-50%) !important;
    }
    
    /* Optimize mobile image loading */
    img {
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
    }
  }
  
  /* Enhanced accessibility and focus states */
  a {
    outline: none;
  }
  
  a:focus-visible {
    outline: 2px solid theme('colors.gold');
    outline-offset: 2px;
    border-radius: 8px;
  }
  
  /* Improved button hover states */
  .group:hover svg {
    transform: scale(1.1);
  }
  
  /* Smooth scrolling performance */
  * {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  /* Optimize image loading */
  img {
    content-visibility: auto;
    contain-intrinsic-size: 300px 200px;
  }
  
  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
  
  /* Enhanced contrast for better readability */
  @media (prefers-contrast: high) {
    .text-goldLight\/80 {
      color: rgb(248 214 115 / 0.95) !important;
    }
    
    .text-goldLight\/90 {
      color: rgb(248 214 115) !important;
    }
    
    .border-gold\/20 {
      border-color: rgb(248 214 115 / 0.4) !important;
    }
  }
  
  /* Dark mode optimizations */
  @media (prefers-color-scheme: dark) {
    .bg-white\/5 {
      background-color: rgb(255 255 255 / 0.08);
    }
  }
  
  /* Performance optimizations */
  .bg-gradient-to-br {
    will-change: transform;
  }
  
  /* Intersection observer optimization for images */
  img[loading="lazy"] {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }
  
  img[loading="lazy"].loaded {
    opacity: 1;
  }
</style>

<script>
  // Enhanced image lazy loading with intersection observer
  document.addEventListener('DOMContentLoaded', function() {
    const images = document.querySelectorAll('img[loading="lazy"]');
    
    if ('IntersectionObserver' in window) {
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            img.classList.add('loaded');
            observer.unobserve(img);
          }
        });
      }, {
        root: null,
        rootMargin: '50px',
        threshold: 0.1
      });

      images.forEach(img => {
        imageObserver.observe(img);
      });
    } else {
      // Fallback for browsers without IntersectionObserver
      images.forEach(img => {
        img.classList.add('loaded');
      });
    }
  });

  // Performance monitoring
  if ('performance' in window && 'measure' in window.performance) {
    window.addEventListener('load', () => {
      setTimeout(() => {
        const paintTimings = performance.getEntriesByType('paint');
        const fcp = paintTimings.find(entry => entry.name === 'first-contentful-paint');
        if (fcp) {
          console.log(`First Contentful Paint: ${fcp.startTime.toFixed(2)}ms`);
        }
      }, 0);
    });
  }
</script>
