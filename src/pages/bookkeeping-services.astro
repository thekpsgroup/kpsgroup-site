---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BUSINESS } from '../data/constants';

const pageTitle = 'Bookkeeping Services Near Me | QuickBooks Consultant | Virtual Bookkeeper';
const pageDescription = 'Professional bookkeeping services for small businesses. QuickBooks consulting, cleanup, virtual bookkeeping, and industry-specific solutions for HVAC, electrical, plumbing, and construction contractors. Call 469-534-3392.';

const keywords = [
  'bookkeeper near me',
  'bookkeeping services near me',
  'QuickBooks bookkeeper',
  'virtual bookkeeper',
  'small business bookkeeper',
  'QuickBooks consultant',
  'bookkeeping consultant',
  'QuickBooks cleanup',
  'construction bookkeeping',
  'HVAC bookkeeping',
  'electrical contractor bookkeeper',
  'plumbing bookkeeping',
  'contractor bookkeeping services',
  'field service bookkeeping',
  'trade business bookkeeper',
  'QuickBooks for contractors',
  'bookkeeping Austin TX',
  'bookkeeping Dallas TX',
  'bookkeeping Houston TX',
  'nationwide bookkeeping services',
  'remote bookkeeping services'
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Professional Bookkeeping Services",
  "description": pageDescription,
  "provider": {
    "@type": "Organization",
    "name": "The KPS Group LLC",
    "url": "https://thekpsgroup.com",
    "telephone": "469-534-3392"
  },
  "areaServed": "United States",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Bookkeeping Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "QuickBooks Consulting"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Virtual Bookkeeping"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "Construction Bookkeeping"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "HVAC Bookkeeping"
        }
      }
    ]
  }
};
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  keywords={keywords}
  canonical="https://thekpsgroup.com/bookkeeping-services"
  isServicePage={true}
  serviceName="Bookkeeping Services"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <!-- Hero Section -->
  <section class="relative py-20 sm:py-24 lg:py-32 bg-gradient-to-b from-black to-gray-950">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-accent-600/30 rounded-full px-6 py-3 mb-8">
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-accent-400 tracking-wide uppercase">Bookkeeping Services</span>
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight">
          Professional <span class="text-gradient-accent">Bookkeeping Services</span><br/>
          <span class="text-2xl sm:text-3xl lg:text-4xl font-normal text-white/80">QuickBooks Experts Near You</span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-white/80 leading-relaxed mb-12">
          Trusted by 250+ businesses nationwide. Get your books cleaned up, organized, and running efficiently with our expert bookkeeping services.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="mailto:sales@thekpsgroup.com?subject=Bookkeeping Services Inquiry&body=Hello, I need help with bookkeeping for my business." class="btn-primary text-lg px-8 py-4">
            Get Free Consultation
          </a>
          <a href="tel:4695343392" class="btn-secondary text-lg px-8 py-4">
            Call (469) 534-3392
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center gap-8 text-sm text-white/60">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>QuickBooks ProAdvisor Certified</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Nationwide Service</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Same-Day Response</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-20 bg-gray-950">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Complete Bookkeeping Solutions</h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">From QuickBooks cleanup to ongoing virtual bookkeeping, we handle your financial records so you can focus on growing your business.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- QuickBooks Services -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">QuickBooks Consulting</h3>
          <p class="text-white/70 mb-6">Expert QuickBooks setup, cleanup, training, and ongoing support. We're QuickBooks ProAdvisor certified.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• QuickBooks cleanup & organization</li>
            <li>• Chart of accounts optimization</li>
            <li>• Job costing for contractors</li>
            <li>• Custom reporting setup</li>
            <li>• Training & ongoing support</li>
          </ul>
        </div>

        <!-- Virtual Bookkeeping -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2H9a2 2 0 00-2 2v10z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Virtual Bookkeeping</h3>
          <p class="text-white/70 mb-6">Complete remote bookkeeping services. We handle everything while you focus on your business.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Monthly financial statements</li>
            <li>• Accounts payable/receivable</li>
            <li>• Bank reconciliations</li>
            <li>• Expense categorization</li>
            <li>• Tax preparation support</li>
          </ul>
        </div>

        <!-- Industry Specialization -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Industry Specialists</h3>
          <p class="text-white/70 mb-6">Specialized bookkeeping for contractors and service businesses with unique requirements.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• HVAC contractor bookkeeping</li>
            <li>• Electrical contractor books</li>
            <li>• Plumbing business accounting</li>
            <li>• Construction job costing</li>
            <li>• Field service businesses</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 bg-black">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-12">Why Businesses Choose The KPS Group</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div class="text-left">
            <h3 class="text-xl font-bold text-accent-400 mb-4">Industry Expertise</h3>
            <p class="text-white/70">We understand the unique bookkeeping challenges of contractors, HVAC companies, electrical businesses, plumbing companies, and other service industries.</p>
          </div>
          <div class="text-left">
            <h3 class="text-xl font-bold text-accent-400 mb-4">QuickBooks Certified</h3>
            <p class="text-white/70">Our team includes QuickBooks ProAdvisor certified professionals with years of experience helping businesses optimize their accounting systems.</p>
          </div>
          <div class="text-left">
            <h3 class="text-xl font-bold text-accent-400 mb-4">Nationwide Service</h3>
            <p class="text-white/70">Virtual bookkeeping services available nationwide. We serve clients from Austin to New York, providing consistent, reliable support wherever you are.</p>
          </div>
          <div class="text-left">
            <h3 class="text-xl font-bold text-accent-400 mb-4">Fast Response</h3>
            <p class="text-white/70">Same-day response to inquiries and urgent bookkeeping needs. We're here when you need us most.</p>
          </div>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-white mb-4">Ready to Get Your Books Organized?</h3>
          <p class="text-white/80 mb-6">Don't let bookkeeping headaches slow down your business. Our experts are ready to help you get organized and stay compliant.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="mailto:sales@thekpsgroup.com?subject=Bookkeeping Services Consultation&body=Hello, I'd like to schedule a consultation for bookkeeping services." class="btn-primary">
              Schedule Free Consultation
            </a>
            <a href="tel:4695343392" class="btn-secondary">
              Call Now: (469) 534-3392
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.text-gradient-accent {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.btn-primary {
  @apply inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-accent-600 to-accent-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2 focus:ring-offset-black;
}

.btn-secondary {
  @apply inline-flex items-center justify-center px-6 py-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold rounded-lg border border-white/20 hover:border-accent-500/50 transition-all duration-300 hover:scale-105;
}
</style>
