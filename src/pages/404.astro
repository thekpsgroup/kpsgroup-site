---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = '404 - Page Not Found | The KPS Group';
const description = 'The page you are looking for does not exist. Return to The KPS Group homepage to find what you need.';
---

<BaseLayout title={title} description={description} noindex={true}>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-b from-black to-gray-950">
    <div class="max-w-2xl mx-auto px-6 text-center">
      
      <!-- Error Badge -->
      <div class="inline-flex items-center gap-3 bg-red-500/10 backdrop-blur-sm border border-red-500/30 rounded-full px-6 py-3 mb-8">
        <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
        <span class="text-sm font-medium text-red-400 tracking-wide uppercase">404 Error</span>
        <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
      </div>

      <!-- Main Content -->
      <h1 class="text-6xl lg:text-8xl font-bold mb-6 bg-gradient-to-r from-white via-gray-300 to-white bg-clip-text text-transparent">
        404
      </h1>
      
      <h2 class="text-2xl lg:text-3xl font-semibold mb-6 text-white">
        Page Not Found
      </h2>
      
      <p class="text-lg text-gray-400 mb-12 max-w-md mx-auto leading-relaxed">
        The page you're looking for doesn't exist or may have been moved. 
        Let's get you back to exploring our business solutions.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/" 
           class="inline-flex items-center gap-2 bg-warning-400 text-black px-8 py-4 rounded-lg font-semibold hover:bg-warning-300 transition-all duration-300 hover:scale-105">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Return Home
        </a>
        
        <a href="/contact" 
           class="inline-flex items-center gap-2 bg-white/10 text-white border border-white/20 px-8 py-4 rounded-lg font-semibold hover:bg-white/20 transition-all duration-300">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          Contact Support
        </a>
      </div>

      <!-- Popular Links -->
      <div class="mt-16">
        <h3 class="text-lg font-semibold text-white mb-6">Popular Pages</h3>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
          <a href="/services" class="text-gray-400 hover:text-warning-400 transition-colors">Services</a>
          <a href="/about" class="text-gray-400 hover:text-warning-400 transition-colors">About Us</a>
          <a href="/locations" class="text-gray-400 hover:text-warning-400 transition-colors">Locations</a>
          <a href="/contact" class="text-gray-400 hover:text-warning-400 transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Custom animations for 404 page */
  @keyframes bounce {
    0%, 20%, 53%, 80%, 100% {
      transform: translate3d(0,0,0);
    }
    40%, 43% {
      transform: translate3d(0,-30px,0);
    }
    70% {
      transform: translate3d(0,-15px,0);
    }
    90% {
      transform: translate3d(0,-4px,0);
    }
  }
  
  h1 {
    animation: bounce 2s ease-in-out infinite;
  }
</style>
