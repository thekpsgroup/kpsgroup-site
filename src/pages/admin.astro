---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdminDashboard from '../components/AdminDashboard.astro';

// Simple password protection - you should implement proper authentication
const { request } = Astro;
const url = new URL(request.url);
const password = url.searchParams.get('password') || '';

// Set your admin password here (you should use environment variables in production)
const ADMIN_PASSWORD = 'kpsadmin2025';

const isAuthenticated = password === ADMIN_PASSWORD;

// If not authenticated and not providing password, show login
if (!isAuthenticated && !url.searchParams.has('password')) {
  return new Response(`
    <!DOCTYPE html>
    <html>
    <head>
      <title>KPS Group - Admin Access</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <style>
        body { 
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
          background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
          margin: 0;
          padding: 0;
          height: 100vh;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        .login-container {
          background: white;
          padding: 3rem;
          border-radius: 1rem;
          box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
          max-width: 400px;
          width: 90%;
        }
        .logo {
          text-align: center;
          margin-bottom: 2rem;
        }
        .logo h1 {
          color: #1e40af;
          font-size: 2rem;
          margin: 0;
          font-weight: 700;
        }
        .logo p {
          color: #6b7280;
          margin: 0.5rem 0 0 0;
          font-size: 0.875rem;
        }
        .form-group {
          margin-bottom: 1.5rem;
        }
        label {
          display: block;
          margin-bottom: 0.5rem;
          color: #374151;
          font-weight: 500;
        }
        input[type="password"] {
          width: 100%;
          padding: 0.75rem 1rem;
          border: 1px solid #d1d5db;
          border-radius: 0.5rem;
          font-size: 1rem;
          box-sizing: border-box;
        }
        input[type="password"]:focus {
          outline: none;
          border-color: #3b82f6;
          box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
        button {
          width: 100%;
          background: #1e40af;
          color: white;
          padding: 0.75rem 1rem;
          border: none;
          border-radius: 0.5rem;
          font-size: 1rem;
          font-weight: 600;
          cursor: pointer;
          transition: background 0.2s;
        }
        button:hover {
          background: #1d4ed8;
        }
        .warning {
          background: #fef3c7;
          border: 1px solid #f59e0b;
          color: #92400e;
          padding: 0.75rem;
          border-radius: 0.5rem;
          font-size: 0.875rem;
          margin-top: 1rem;
        }
      </style>
    </head>
    <body>
      <div class="login-container">
        <div class="logo">
          <h1>KPS Group</h1>
          <p>Admin Dashboard Access</p>
        </div>
        <form method="GET">
          <div class="form-group">
            <label for="password">Admin Password</label>
            <input 
              type="password" 
              id="password" 
              name="password" 
              required 
              placeholder="Enter admin password"
              autocomplete="current-password"
            >
          </div>
          <button type="submit">Access Dashboard</button>
        </form>
        <div class="warning">
          <strong>Authorized Access Only:</strong> This dashboard contains sensitive business data. Unauthorized access is prohibited.
        </div>
      </div>
    </body>
    </html>
  `, {
    status: 200,
    headers: {
      'Content-Type': 'text/html'
    }
  });
}

// If password is wrong, show error
if (!isAuthenticated) {
  return new Response(`
    <!DOCTYPE html>
    <html>
    <head>
      <title>Access Denied - KPS Group Admin</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <style>
        body { 
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
          background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
          margin: 0;
          padding: 0;
          height: 100vh;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        .error-container {
          background: white;
          padding: 3rem;
          border-radius: 1rem;
          box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
          max-width: 400px;
          width: 90%;
          text-align: center;
        }
        .error-icon {
          font-size: 4rem;
          margin-bottom: 1rem;
        }
        .error-title {
          color: #dc2626;
          font-size: 1.5rem;
          font-weight: 700;
          margin-bottom: 1rem;
        }
        .error-message {
          color: #6b7280;
          margin-bottom: 2rem;
        }
        .retry-button {
          background: #dc2626;
          color: white;
          padding: 0.75rem 1.5rem;
          border: none;
          border-radius: 0.5rem;
          font-size: 1rem;
          font-weight: 600;
          cursor: pointer;
          text-decoration: none;
          display: inline-block;
        }
        .retry-button:hover {
          background: #b91c1c;
        }
      </style>
    </head>
    <body>
      <div class="error-container">
        <div class="error-icon">ðŸš«</div>
        <h1 class="error-title">Access Denied</h1>
        <p class="error-message">Invalid admin password. Please check your credentials and try again.</p>
        <a href="/admin" class="retry-button">Try Again</a>
      </div>
    </body>
    </html>
  `, {
    status: 401,
    headers: {
      'Content-Type': 'text/html'
    }
  });
}
---

<BaseLayout title="KPS Group - Admin Dashboard">
  <AdminDashboard />
</BaseLayout>

<style>
  /* Remove any default margins/padding from the layout */
  html, body {
    margin: 0 !important;
    padding: 0 !important;
  }
</style>
